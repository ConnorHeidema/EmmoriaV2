{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "BuildAll",
            "command": "/usr/bin/g++-7",
            "args": [
                "-std=c++17",

                "-g",
                "${workspaceFolder}/main.cpp",

                // Core
                "${workspaceFolder}/src/core/Application.cpp",
                "${workspaceFolder}/src/core/TileMap.cpp",

                // Component map
                "${workspaceFolder}/src/component/InteractStringMap.cpp",

                // Tilemap
                "${workspaceFolder}/src/TileMap/TileMapIndexes.cpp",

                // Utility classes
                "${workspaceFolder}/src/util/Mediamap.cpp",
                "${workspaceFolder}/src/util/Entitymap.cpp",
                "${workspaceFolder}/src/util/MediatoEntitymap.cpp",
                "${workspaceFolder}/src/util/ApplicationParameters.cpp",
                "${workspaceFolder}/src/util/MouseUtils.cpp",
                "${workspaceFolder}/src/util/EntityLoaderUtils.cpp",
                "${workspaceFolder}/src/util/Helper.cpp",
                "${workspaceFolder}/src/util/SystemList.cpp",
                "${workspaceFolder}/src/util/OverlapUtils.cpp",
                "${workspaceFolder}/src/util/AnimationMappings.cpp",

                // System implementations
                "${workspaceFolder}/src/system/MovementSys.cpp",
                "${workspaceFolder}/src/system/PrintMovementSys.cpp",
                "${workspaceFolder}/src/system/MovieRenderSys.cpp",
                "${workspaceFolder}/src/system/GameRenderSys.cpp",
                "${workspaceFolder}/src/system/LoadingSys.cpp",
                "${workspaceFolder}/src/system/ButtonSys.cpp",
                "${workspaceFolder}/src/system/ClickableSys.cpp",
                "${workspaceFolder}/src/system/DialogSys.cpp",
                "${workspaceFolder}/src/system/PersistentSys.cpp",
                "${workspaceFolder}/src/system/HealthSys.cpp",
                "${workspaceFolder}/src/system/InteractingSys.cpp",
                "${workspaceFolder}/src/system/TileMapSys.cpp",
                "${workspaceFolder}/src/system/AnimationSys.cpp",
                "${workspaceFolder}/src/system/SceneLoadSys.cpp",

                // Entity factory
                "${workspaceFolder}/src/entity/EntityLoaderFactory.cpp",


                // Internal libraries
                "-I", "${workspaceFolder}/inc",
                "-I", "${workspaceFolder}/ext/inc",

                // External libraries
                "-L", "${workspaceFolder}/ext/bin/SFML",
                "-L", "${workspaceFolder}/ext/bin/sfemovie",

                // c++ 17
                "-l", "stdc++fs",

                // sfemovie
                "-l", "sfeMovie",
                "-l", "avcodec",
                "-l", "avdevice",
                "-l", "avfilter",
                "-l", "avformat",
                "-l", "avutil",
                "-l", "swresample",
                "-l", "swscale",

                // SFML
                "-l", "sfml-graphics",
                "-l", "sfml-window",
                "-l", "sfml-system",
                "-l", "sfml-audio",
                "-l", "sfml-network",

                "-o", "${workspaceFolder}/output/emmoria.out"
            ],
            "options": { "cwd": "${workspaceFolder}" },
            "problemMatcher": [ "$gcc" ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}