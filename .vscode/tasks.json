{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++-7 build active file",
            "command": "/usr/bin/g++-7",
            "args": [
                "-std=c++17",
                "-g", "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/core/Application.cpp",

                "-I", "${workspaceFolder}/inc",
                "-I", "${workspaceFolder}/ext/inc",
                "-L", "${workspaceFolder}/ext/bin/SFML",
                "-L", "${workspaceFolder}/ext/bin/sfemovie",
                "-l", "avcodec",
                "-l", "sfeMovie",
                "-l", "avdevice",
                "-l", "avfilter",
                "-l", "avformat",
                "-l", "avutil",
                "-l", "swresample",
                "-l", "swscale",
                "-l", "sfml-graphics",
                "-l", "sfml-window",
                "-l", "sfml-system",
                "-l", "sfml-audio",
                "-l", "sfml-network",
                "-o", "${workspaceFolder}/output/emmoria.out"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}